<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
      <%= dose.description %> : <%= dose.ingredient.name %>
      <%= link_to 'Delete a dose', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'} %>
  </li>
  <% end %>
</ul>

<%= link_to 'Back to all our cocktails', cocktails_path %>

<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
