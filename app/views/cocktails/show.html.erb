<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
      <%= dose.description %> : <%= dose.ingredient.name %>
      <button type="button" class="btn btn-danger"><%= link_to 'Delete a dose', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'} %></button>
  </li>
  <% end %>
</ul>

<button type="button" class="btn btn-secondary"><%= link_to 'Back to all our cocktails', cocktails_path %></button>

<button type="button" class="btn btn-success"><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %></button>

