

<div class="card-trip">
  <img src="https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2098&q=80" />
  <div class="card-trip-infos">
    <div>
      <h2><%= @cocktail.name %></h2>
</div>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
      <%= dose.description %> : <%= dose.ingredient.name %>
      <%= link_to 'Delete a dose', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'} %>
  </li>
  <% end %>
</ul>

<%= link_to 'Back to all our cocktails', cocktails_path %>

<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
